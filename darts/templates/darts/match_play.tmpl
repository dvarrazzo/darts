{% extends "darts/base.tmpl" %}

{% block header %}
{{ block.super }}
<script type="text/javascript" charset="utf-8">
  $(function () {
  });
</script>
{% endblock header %}


{% block content %}

<table class="players">
  <tr>
    <th>Player</th>
    <th>Score</th>
    <th colspan="3">Last throws</th>
  </tr>
{% for p in game.get_players_and_leg_score %}
  <tr class="{% ifequal p game.current_player %}current{% endifequal %}">
    <td class="player">
      <img class="avatar" src="{{p.avatar.url}}" />
      <span class="username">{{p.username}}</span>
    </td>
    <td class="score">{{p.leg_score}}</td>
  {% for t in p.last_throws %}
    <td class="throw {% if t.current %}current{% endif %}">
      {{t.label|default:'-'}}
    </td>
  {% endfor %}
  <tr>
{% endfor %}
</table>

{% for table in game.score_tables %}
  <table class="score">
    {% for row in table %}
    <tr>
      {% for score in row %}
        <td class="score" data-code="{{score.code}}">
          {{score.label}}
        </td>
      {% endfor %}
    </tr>
    {% endfor %}
  </table>
{% endfor %}

{% endblock content %}


